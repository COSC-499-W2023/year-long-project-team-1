{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "target": "es5",
        "lib": ["dom", "es2020"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/components/*"],
            "@lib/*": ["./src/lib/*"],
            "@assets/*": ["./src/assets/*"],
            "@patternfly/assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"],
            "@conf/*": ["./conf/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
